<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="87"
    android:background="@mipmap/mainlayoutbk"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:layout_alignParentBottom="true"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFFFFFFF">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/music_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_marginBottom="60dp"
            >

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/main_player_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#A0000000"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/image_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@mipmap/test_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbtn_previous_List"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_pre" />

                <ImageButton
                    android:id="@+id/imgbtn_play_List"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"

                    android:src="@mipmap/ic_play_circle_outline_black_48dp" />

                <ImageButton
                    android:id="@+id/imgbtn_next_List"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_next" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
